{% extends 'base.html.twig' %}

{% block title %}Профиль/StudyOn{% endblock %}

{% block body %}
    <h1 class="text-center mt-2">Профиль</h1>
    <div class="row justify-content-center mt-5">
        <div class="col-6 d-flex flex-column align-items-center">
            <img src="{{ asset('images/user-image.png') }}" height="40%" alt="user-image">
            <div class="alert alert-success mt-2">
                <p>Email: {{ userDto.username }}</p>
                <p>Роль:
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        Администратор
                    {% else %}
                        Пользователь
                    {% endif %}
                </p>
                <p>Баланс: {{ userDto.balance }}</p>
            </div>
            <a class="btn btn-outline-info" href="{{ path('profile_history') }}" role="button">
                Перейти к моей истории
            </a>
        </div>
    </div>
{% endblock %}
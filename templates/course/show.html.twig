{% extends 'base.html.twig' %}

{% block title %}{{ course.name}} / StudyOn{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.description }}</td>
            </tr>
        </tbody>
    </table>
    <h2>Lessons</h2>
    <ol>
        {% for lesson in lessons %}
            <li><a href="{{ path('lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a></li>
        {% endfor %}
    </ol>

    <div>
        <a href="{{ path('course_index') }}">back to list</a>

        <a href="{{ path('course_edit', {'id': course.id}) }}">edit</a>

        <a href="{{ path('lesson_new', {'course_id': course.id}) }}">add lesson</a>
    </div>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}

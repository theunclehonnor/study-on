{% extends 'base.html.twig' %}

{% block title %}{{ lesson.name}} / {{ lesson.course.name}} / StudyOn{% endblock %}

{% block body %}
    <h1>Lesson: {{ lesson.name }}</h1>
    <h2>Course: <a href="{{ path('course_show', {'id': lesson.course.id}) }}">{{ lesson.course.name }}</a></h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Material</th>
                <td>{{ lesson.material }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('lesson_index') }}">back to list</a>

    <a href="{{ path('lesson_edit', {'id': lesson.id}) }}">edit</a>

    {{ include('lesson/_delete_form.html.twig') }}
{% endblock %}
